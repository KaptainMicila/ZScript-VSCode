{
    "comments": {
        "lineComment": [";", "//"],
        "blockComment": ["/*", "*/"]
    },
    "autoClosingPairs": [
        {
            "open": "\"",
            "close": "\"",
            "notIn": ["comment", "string"]
        },
        {
            "open": "'",
            "close": "'",
            "notIn": ["comment", "string"]
        }
    ],
    "surroundingPairs": [
        {
            "open": "\"",
            "close": "\""
        },
        {
            "open": "'",
            "close": "'"
        }
    ],
    "folding": {
        "markers": {
            "start": "^\\s*((//|;)\\s*)?(\\#)?region\\b",
            "end": "^\\s*((//|;)\\s*)?(\\#)?endregion\\b"
        }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
