{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "ALTHUD",
    "patterns": [
        { "include": "#althudPatterns" },
        { "include": "source.mapinfolike#innerContextPatterns" }
    ],
    "repository": {
        "althudPatterns": {
            "patterns": [
                {
                    "name": "constant.name.althud",
                    "match": "(?<=\\w+?\\s+?)\\w+?\\b"
                },
                {
                    "name": "keyword.other.region.start.althud",
                    "match": "\\#region.*$"
                },
                {
                    "name": "keyword.other.region.end.althud",
                    "match": "\\#endregion.*$"
                }
            ]
        }
    },
    "scopeName": "source.althud"
}
